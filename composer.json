{
    "name": "sofiz/sofizpay-sdk-php",
    "description": "PHP SDK for SofizPay using Stellar network",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Sofiz",
            "email": "contact@sofiz.com"
        }
    ],
    "require": {
        "php": ">=8.0",
        "soneso/stellar-php-sdk": "^1.8",
        "guzzlehttp/guzzle": "^7.0",
        "phpseclib/bcmath_compat": "^2.0",
        "ext-json": "*",
        "ext-curl": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.0",
        "squizlabs/php_codesniffer": "^3.7",
        "php-cs-fixer/shim": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Sofiz\\SofizPay\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sofiz\\SofizPay\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpstan": "phpstan analyse src tests --level=8",
        "cs-fix": "php-cs-fixer fix",
        "cs-check": "phpcs --standard=PSR12 src tests"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
